CIAOCMD ?= ciao

clean: 
	$(CIAOCMD) clean_tree "."
	/bin/rm -f *~
	/bin/rm -f Attic/*~
	/bin/rm -f CCAT/*~
	/bin/rm -f benchmark/*~
	/bin/rm -f examples/*~
	/bin/rm -f swap_examples/*~
	$(CIAOCMD) clean_tree "../../../bndls/tclp/lib/difference_constraints/"
	/bin/rm -f ../../../bndls/tclp/lib/difference_constraints/*~
	/bin/rm -f ../../../bndls/tclp/lib/difference_constraints/difference_constraints_tab/*~
	/bin/rm -f ../../../bndls/tclp/lib/difference_constraints/difference_constraints_tab/examples/*~
